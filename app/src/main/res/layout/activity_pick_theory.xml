<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PickTheory"
    android:background="@drawable/bg2_1">


    <View
        android:id="@+id/rectangle4"
        android:layout_width="414dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/header2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_button5"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorTransarent"
        android:drawableStart="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:fontFamily="@font/montserrat"
        android:onClick="backBut"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#ECECE9"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/some_id4"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="14dp"
        android:gravity="top"
        android:text="Обучение"
        android:textAlignment="center"
        android:textColor="#ECECE9"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/topicsTable"
            android:layout_width="match_parent"
            android:layout_height="529dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="15dp"
            android:background="#68575F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle4">

            <TableRow
                android:id="@+id/t0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/t_open"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Начало движения и изменение его направления"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/t_closed"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Обгон"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/t_closed"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Остановка и стоянка"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/t_closed"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Проезд перекрестков"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/t_closed"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Проезд пешеходных переходов и остановок транспортных средств"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/t5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/t_closed"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Движение через железнодорожные переезды"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/t6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/t_closed"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Общие положения"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/t7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/t_closed"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Обязанности и права водителей механических транспортных средств"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/t8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/t_closed"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Движение транспортных средств со специальными сигналами"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/t9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/t_closed"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Обязанности и права пешеходов"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/t10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/t_closed"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Обязанности и права пассажиров"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/t11"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="@drawable/t_closed"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Требования к велосипедистам"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:id="@+id/t12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/t_closed"
                android:gravity="center">

                <TextView
                    android:id="@+id/thead13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Требования к лицам, управляющим гужевым транспортом и погонщикам животных"
                    android:textAlignment="center"
                    android:textColor="#ECECE9"
                    android:textSize="20sp" />
            </TableRow>

        </TableLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>