<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2_1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".LogedIn"
    tools:showIn="@layout/app_bar_loged_in">

    <Button
        android:id="@+id/study2"
        android:layout_width="247.74dp"
        android:layout_height="72.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/montserrat"
        android:onClick="theoryBut"
        android:text="Обучение"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ECECE9"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/test2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="414dp"
        android:layout_height="58dp"
        android:alpha=".6"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@color/fifth_color" />

    <Button
        android:id="@+id/test2"
        android:layout_width="247.74dp"
        android:layout_height="72.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/montserrat"
        android:onClick="testBut"
        android:text="Быстрый тест"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ECECE9"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/help2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/study2" />

    <Button
        android:id="@+id/help2"
        android:layout_width="247.74dp"
        android:layout_height="72.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/montserrat"
        android:onClick="helpBut"
        android:text="Помощь"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ECECE9"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="© 2019. Все права защищены"
        android:textColor="#ECECE9"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />
</androidx.constraintlayout.widget.ConstraintLayout>